<h2>Word <%= @definition.word.name%></h2>
<h3>Definition <%= @definition.name%></h3>

<form action="/homepage/<%= @definition.word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Update definition</label>
  <input id="name" name="name" type="text">
  <br>
  <button type="submit" class="btn">update</button>
</form>

<form action="/homepage/<%= @definition.word.id %>/definition/<%=@definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <br>
  <button type="submit">Delete definition</button>
</form>


<a href="/homepage/<%= @definition.word.id %>">Back to <%= @definition.word.name%></a>
<br>
